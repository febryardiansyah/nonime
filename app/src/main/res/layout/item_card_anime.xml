<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:elevation="0dp"
    app:cardBackgroundColor="@color/red"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo"
            android:id="@+id/itemCardAnimeThumb"
            android:scaleType="centerCrop"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="@drawable/rounded_red_rectangle">
            <TextView
                android:id="@+id/itemCardAnimeEpisode"
                android:layout_width="wrap_content"
                android:text="Placeholder"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/black_rectangle"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@id/itemCardAnimeThumb"
            android:layout_alignEnd="@id/itemCardAnimeThumb"
            />

        <TextView
            android:id="@+id/itemCardAnimeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/itemCardAnimeThumb"
            android:layout_alignEnd="@id/itemCardAnimeThumb"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/placeholder"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>